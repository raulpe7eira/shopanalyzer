<div class="panel-body">
  <%= form_for(sale) do |f| %>
    <% if sale.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2><%= "#{pluralize(sale.errors.count, t('labels.error', count: sale.errors.count))}" %></h2>
      <ul>
        <% sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="form-group form-group-sm">
      <%= f.label :shopper %>
      <%= collection_select :sale, :shopper_id, @shopper_all, :id, :name, {}, class: 'form-control' %>
    </div>

    <div class="form-group form-group-sm">
      <%= f.label :product %>
      <%= collection_select :sale, :product_id, @product_all, :id, :name, {}, class: 'form-control' %>
    </div>

    <div class="row">
      <div class="col-xs-6">
        <div class="form-group form-group-sm">
          <%= f.label :price %>
          <div class="input-group">
            <div class="input-group-addon"><%= sale.price.currency.symbol %></div>
            <%= f.number_field :price, step: 0.01, class: 'form-control' %>
          </div>
        </div>
      </div>

      <div class="col-xs-6">
        <div class="form-group form-group-sm">
          <%= f.label :amount %>
          <%= f.number_field :amount, step: 1, class: 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group form-group-sm">
      <%= f.label :address %>
      <%= f.text_area :address, rows: 4, class: 'form-control' %>
    </div>

    <div class="form-group form-group-sm">
      <%= f.label :supplier %>
      <%= collection_select :sale, :supplier_id, @supplier_all, :id, :name, {}, class: 'form-control' %>
    </div>

    <div class="panel-footer">
      <%= f.submit t('buttons.save'), class: 'btn btn-sm btn-primary' %>
      <%= link_to t('buttons.cancel'), sales_path, class: 'btn btn-sm btn-default' %>
    </div>
  <% end %>
</div>

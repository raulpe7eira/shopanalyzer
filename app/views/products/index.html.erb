<div class="panel panel-default list">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
      <thead>
        <tr>
          <th class="sorters">#</th>
          <th><%= Product.human_attribute_name('name') %></th>
          <th class="actions">
            <%= link_to t('buttons.new'), new_product_path, class: 'btn btn-xs btn-primary', width: '100%' %>
          </th>
        </tr>
      </thead>
      <tbody>
        <% @products.each_with_index do |product, index| %>
        <tr>
          <th class="sorters text-info"><%= row_number(index, @products.limit_value) %></th>
          <td><%= product.name %></td>
          <td class="actions">
            <div class="btn-group btn-group-xs">
              <%= link_to edit_product_path(product), class: 'btn btn-default' do %>
                <span class="glyphicon glyphicon-edit text-info" aria-hidden="true"></span>
              <% end %>
              <%= link_to product, method: :delete, data: { confirm: t('messages.confirm') }, class: 'btn btn-default' do %>
                <span class="glyphicon glyphicon-trash text-danger" aria-hidden="true"></span>
              <% end %>
            </div>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="panel-footer clearfix">
    <p class="pagination-info"><%= page_entries_info @products %></p>
    <%= paginate @products, window: 1 %>
  </div>
</div>
